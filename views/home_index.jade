html(ng-app="newsApp")
  head
    meta(charset='utf8')
    base(href='/')
    title Angular Socket.io Seed App
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    div(ng-controller='AppCtrl')
      .well
        .article(ng-repeat='article in articles', ng-cloak)
          .media
            .img
              img(ng-src="{{article.image}}")
            .bd
              h2 
                a(href="{{article.href}}") {{article.title}}
              p {{article.body}}

        .count(ng-show="count", ng-cloak="count")
          {{count}} other article has been posted

    script(src='components/jquery/jquery.js')
    script(src='components/lodash/lodash.js')
    script(src='components/socket.io/dist/socket.io.js')
    script(src='components/angular/angular.js')
    script(src='js/app.js')
    script(src='js/controller.js')
    script(src='js/service.js')
